generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  email     String     @unique
  username  String?    @db.VarChar(100)
  password  String
  role      Role       @default(ADMIN)
  services  Service[]
  employees Employee[]
  clients   Client[]
  washed    Washing[]
}

model Service {
  id          Int             @id @default(autoincrement())
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  name        String          @db.VarChar(100)
  description String?
  price       Float
  duration    Int
  category    ServiceCategory @default(BASIC)
  status      Status          @default(ACTIVE)
  userId      Int
  user        User            @relation(fields: [userId], references: [id])
  washed      Washing[]
}

model Employee {
  id             Int       @id @default(autoincrement())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  name           String    @db.VarChar(100)
  phone          String?   @db.VarChar(15)
  entry_time     String    @db.VarChar(5)
  departure_time String    @db.VarChar(5)
  status         Status    @default(ACTIVE)
  user           User      @relation(fields: [userId], references: [id])
  userId         Int
  washed         Washing[]
}

model Client {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String    @db.VarChar(100)
  email     String    @db.VarChar(100)
  phone     String    @db.VarChar(15)
  car_type  CarType   @default(CAR)
  car_model String    @db.VarChar(100)
  car_plate String    @db.VarChar(20)
  status    Status    @default(ACTIVE)
  user      User      @relation(fields: [userId], references: [id])
  userId    Int
  washed    Washing[]
}

model Washing {
  id         Int           @id @default(autoincrement())
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  status     WashingStatus @default(PENDING)
  user       User          @relation(fields: [userId], references: [id])
  userId     Int
  service    Service       @relation(fields: [serviceId], references: [id])
  serviceId  Int
  employee   Employee      @relation(fields: [employeeId], references: [id])
  employeeId Int
  client     Client        @relation(fields: [clientId], references: [id])
  clientId   Int
}

enum Role {
  USER
  ADMIN
}

enum ServiceCategory {
  COMPLETE
  BASIC
  PREMIUM
}

enum Status {
  ACTIVE
  INACTIVE
}

enum CarType {
  CAR
  PICKUP
  MOTORCYCLE
  OTHER
}

enum WashingStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELED
}
